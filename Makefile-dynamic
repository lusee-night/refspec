CXX = g++
CXXFLAGS = -fPIC -g

FFTW_LINK = -lfftw3 -lfftw3f 
# -mxp- used to require static, now want to built relocatable
# LINKFLAGS = -static

SOURCES = src/pfb.cpp src/SpecConfig.cpp src/SpecOutput.cpp src/SignalGenerator.cpp \
          src/RefSpectrometer.cpp

OBJS = $(SOURCES:.cpp=.o)

TEST_SOURCES = test/test_pfb.cpp test/test_timing.cpp test/test_response.cpp test/simple_demo.cpp test/response_leak_detector.cpp
TEST_EXECS = $(TEST_SOURCES:.cpp=.exe)

LIBRARY = refspec.so

all: $(LIBRARY) $(TEST_EXECS)

$(OBJS): %.o: %.cpp
	$(CXX) -c $(CXXFLAGS) -Iinclude  $< -o $@

$(TEST_EXECS): %.exe: %.cpp $(LIBRARY)
	$(CXX) $(CXXFLAGS) -Iinclude   $< $(LIBRARY) $(FFTW_LINK)-o $@ 

# -mxp- In the original: in the line above $(LINKFLAGS) was present

$(LIBRARY): $(OBJS) Makefile 
	rm -f $(LIBRARY)
	ar rcs $(LIBRARY) $(OBJS)

#shared: $(OBJS) Makefile
#	g++ -shared -o libfoo.so $(OBJS)

clean:
	rm $(LIBRARY) $(OBJS)


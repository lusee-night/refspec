CXX = g++

CXXFLAGS_DYNAMIC = -O3 -fPIC -g -std=c++17

BUILD = ./build

FFTW_LINK = -lfftw3 -lfftw3f

SRCS = pfb.cpp SpecConfig.cpp SpecOutput.cpp SignalGenerator.cpp RefSpectrometer.cpp PowerSpecSource.cpp CombSource.cpp
OBJS := $(patsubst %.cpp, $(BUILD)/%.o, $(SRCS) )

LIBRARY = refspec.so

all: LIBRARY

$(BUILD):
	$(shell mkdir -p $(BUILD))

clean:
	rm -f $(LIBRARY)
	rm -fr $(BUILD)

LIBRARY: $(BUILD) $(OBJS) Makefile
	@echo Building the refspec shared library
	g++ $(OBJS) -shared -lfftw3 -lfftw3f -o $(LIBRARY) 


$(OBJS): $(BUILD)/%.o: src/%.cpp Makefile
	$(CXX) -c $(CXXFLAGS_DYNAMIC) -Iinclude -Iextern ${python_includes} $< -o $@

